{% extends "layout.njk" %}

{% block head %}
    <title>TeachFlix</title>
{% endblock %}

{% block content %}
    <form class="card" method="post" action="/teachers">
        <div class="avatar" style=" background: url(https://source.unsplash.com/collection//9901054//500X500) no-repeat center center/ cover"></div>
        <div class="details">
            <h3>Novo Professor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" id="" placeholder="https://">
                </div>
            </div>
            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name" id="" placeholder="Nome do professor">
                </div>
            </div>
            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth" id="">
                </div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="escolaridade" id="">
                        <option value="Ensino Médio">Ensino Médio Completo</option>
                        <option value="Ensino Superior">Ensino Superior Completo</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="classes" id="" value="Presencial">Presencial</span>
                    <span><input type="radio" name="classes" id="" value="À distância">À distância</span>
                </div>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="area" id="" placeholder="Digite as matérias entre vírgulas">
                </div>
            </div>

            <button type="submit">Salvar</button>
        </div>
    </form>

{% endblock %}