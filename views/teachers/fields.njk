            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" id="" placeholder="https://" value="{{teacher.avatar_url}}">
                </div>
            </div>
            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name" id="" placeholder="Nome do professor" value="{{teacher.name}}">
                </div>
            </div>
            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth" id="" value="{{teacher.birth}}">
                </div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="escolaridade" id="" value="">
                        <option value="1" {% if teacher.escolaridade=='medio' %} selected
                        {% endif %}>Ensino Médio Completo</option>
                        <option value="2" {% if teacher.escolaridade=='superior' %} selected
                        {% endif %} >Ensino Superior Completo</option>
                        <option value="3" {% if teacher.escolaridade=='mestrado' %} selected
                        {% endif %}>Mestrado</option>
                        <option value="4" {% if teacher.escolaridade=='doutorado' %} selected
                        {% endif %}>Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="classes" id="" value="P"
                    {% if teacher.classes =='P'%} checked {% endif%}>Presencial</span>
                    <span><input type="radio" name="classes" id="" value="EAD" {% if teacher.classes=='EAD' %} checked
                    {% endif %}>À distância</span>
                </div>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="area" id="" placeholder="Digite as matérias entre vírgulas" value="{{teacher.area}}">
                </div>
            </div>
            <button type="submit">Salvar</button>