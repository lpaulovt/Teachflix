{% extends "layout.njk" %}

{% block head %}
    <title>TeachFlix</title>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="avatar" style=" background: url({{teacher.avatar_url}}) no-repeat center center/ cover"></div>
        <div class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Nome</div>
                <div>{{teacher.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{teacher.escolaridade}}</div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>{{"Presencial" if teacher.classes=="P" else "À distância"}}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                {% for area in teacher.area %}
                    <span>{{area}}</span>
                {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>
        </div>
    </div>

{% endblock %}